---
import Cta from '../components/Cta.astro';
import Layout from '../layouts/Layout.astro';
import { testimonials, features, services } from '../lib/data';
---

<Layout
  description="We provide expert pressure washing for Vancouver Island homes. Serving Nanaimo, Victoria, Duncan & more. Driveways, decks, exteriors. Call today"
  title="Dr Pressure · Pressure Washing"
>
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="flex flex-col gap-16">
        <div class="flex flex-col items-start gap-8 sm:gap-10">
          <div class="flex max-w-xl flex-col items-start gap-4 sm:gap-6">
            <h1
              class="tracknig-wide text-4xl leading-[1.15] font-[600] tracking-tight text-balance capitalize sm:text-5xl lg:text-6xl"
            >
              Professional Pressure Washing Across Vancouver Island!
            </h1>
            <p
              class="text-lg leading-[2] tracking-wide text-balance text-stone-950/70 sm:text-xl dark:text-stone-200/70"
            >
              From Nanaimo to Salt Spring Island, we bring the pressure that gets results.
              Driveways, decks, patios, and home exteriors restored to perfection.
            </p>
          </div>
          <a
            href="/pricing"
            class="bg-navy-blue-700 inline-flex items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-white transition hover:bg-blue-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:bg-blue-400 dark:text-blue-950 dark:hover:bg-blue-300 dark:focus-visible:outline-blue-400"
          >
            Book a Quote
          </a>
        </div>
        <img
          class="h-auto w-full rounded-3xl"
          width="1280"
          height="640"
          src="/assets/hero.webp"
          alt="Photo by zibik on Unsplash"
        />
      </div>
    </div>
  </section>
  <!-- End of Hero Section on Homepage -->
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="flex flex-col gap-12 sm:gap-16">
        <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Services</h2>
        <div class="grid gap-8 lg:grid-cols-3">
          {
            services.map((service) => (
              <div class="bg-navy-blue-500/10 flex flex-col gap-12 rounded-3xl px-6 py-8 dark:bg-blue-400/10">
                <p class="text-sm">{service.step}</p>
                <div class="flex flex-col gap-4">
                  <h3 class="text-xl font-medium">{service.name}</h3>
                  <p class="text-base text-stone-950/70 sm:text-lg dark:text-stone-200/70">
                    {service.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
  <!-- End of Services Section on Homepage -->
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="grid gap-12 lg:grid-cols-3 lg:gap-8">
        <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Expertise</h2>
        <div class="lg:col-span-2">
          <dl
            class="-mt-3"
            x-data="{ selected: null, toggle(value) { this.selected = this.selected === value ? null : value } }"
          >
            {
              features.map((feature, index) => (
                <div
                  class="rounded-3xl px-4 transition"
                  x-data={`{ id: ${index}, get isOpen() { return this.id === this.selected }, get isNextOpen() { return (this.id + 1) === this.selected } }`}
                  x-bind:class="{ 'bg-blue-500/10 dark:bg-blue-400/10': isOpen }"
                >
                  <dt
                    class="border-b text-lg transition"
                    x-cloak
                    x-bind:class="{ 'border-transparent': isOpen || isNextOpen, 'border-stone-900/10 dark:border-stone-300/10': !(isOpen || isNextOpen) }"
                  >
                    <button
                      type="button"
                      class="group block w-full py-6 text-left transition focus-visible:outline-none"
                      aria-controls={feature.id}
                      x-on:click="toggle(id)"
                      aria-expanded="false"
                      x-bind:aria-expanded="isOpen.toString()"
                    >
                      <div class="flex items-center justify-between rounded-3xl group-focus-visible:outline-2 group-focus-visible:outline-offset-2 group-focus-visible:outline-stone-950 dark:group-focus-visible:outline-stone-200">
                        <span class="font-medium">{feature.name}</span>
                        <span class="ml-6 flex h-7 items-center">
                          <svg
                            class="h-6 w-6 rotate-0 transform text-stone-600 transition duration-200 ease-in-out dark:text-stone-400"
                            x-bind:class="{ '-rotate-180': isOpen, 'rotate-0': !isOpen }"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            aria-hidden="true"
                          >
                            <path d="M11.9997 13.1714L16.9495 8.22168L18.3637 9.63589L11.9997 15.9999L5.63574 9.63589L7.04996 8.22168L11.9997 13.1714Z" />
                          </svg>
                        </span>
                      </div>
                    </button>
                  </dt>
                  <dd class="pr-6 pb-6" id={feature.id} x-show="isOpen" x-cloak x-collapse>
                    <p class="text-base text-stone-950/70 dark:text-stone-200/70">
                      {feature.description}
                    </p>
                  </dd>
                </div>
              ))
            }
          </dl>
        </div>
      </div>
    </div>
  </section>
  <!-- End of Expertise Section on Homepage -->
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="grid gap-12 lg:grid-cols-3 lg:gap-8">
        <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">About</h2>
        <div class="flex flex-col items-start gap-8 sm:gap-10 lg:col-span-2">
          <p class="text-base text-stone-950/70 sm:text-lg dark:text-stone-200/70">
            No Nonsense. All Results pressure washing services. We're not the flashiest pressure
            washing company on Vancouver Island – we're the one that shows up on time, works hard,
            and leaves your property looking better than you thought possible. Rain or shine, from
            Courtenay to Duncan, we bring the same commitment to every job: honest work, fair
            pricing, and the kind of results that make neighbors ask questions.
          </p>
          <a
            href="/about"
            class="bg-navy-blue-700 inline-flex items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-white transition hover:bg-blue-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:bg-blue-400 dark:text-blue-950 dark:hover:bg-blue-300 dark:focus-visible:outline-blue-400"
          >
            Read about us
          </a>
        </div>
      </div>
    </div>
  </section>
  <!-- End of About Section on Homepage -->
  <section class="py-16 sm:py-20">
    <div class="v mx-auto px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="flex flex-col items-center gap-12 lg:gap-20">
        <h2 class="mx-auto max-w-xl text-center text-3xl font-medium tracking-tight sm:text-4xl">
          Trusted by the largest companies in the world
        </h2>
        <div
          class="grid divide-y divide-stone-900/10 lg:grid-cols-3 lg:divide-x lg:divide-y-0 dark:divide-stone-300/10"
        >
          {
            testimonials.map((testimonial) => (
              <figure class="mx-auto flex max-w-lg flex-col items-center gap-6 py-8 lg:px-8 lg:py-0">
                <div class="flex flex-row gap-2">
                  {[...Array(3)].map(() => (
                    <svg
                      class="text-navy-blue-600 dark:text-navy-blue-400 h-6 w-6"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path d="M12.0006 18.26L4.94715 22.2082L6.52248 14.2799L0.587891 8.7918L8.61493 7.84006L12.0006 0.5L15.3862 7.84006L23.4132 8.7918L17.4787 14.2799L19.054 22.2082L12.0006 18.26Z" />
                    </svg>
                  ))}
                </div>
                <blockquote class="text-center text-lg leading-loose text-stone-950/70 italic dark:text-stone-200/70">
                  <p>{testimonial.message}</p>
                </blockquote>
                <figcaption class="flex flex-col gap-4">
                  <img class="mx-auto h-8 w-8 rounded-full" src={testimonial.image} alt="" />
                  <div class="text-center">
                    <div class="text-base font-medium">{testimonial.name}</div>
                    <div class="text-sm text-stone-950/70 dark:text-stone-200/70">
                      {testimonial.description}
                    </div>
                  </div>
                </figcaption>
              </figure>
            ))
          }
        </div>
      </div>
    </div>
  </section>
  <Cta
    title="Get Your Free Quote Today"
    action="See the Difference Professional Pressure Washing Makes by booking your service today and discover what your property really looks like underneath."
    link={'/contact'}
    linkText={'Contact us'}
  />
</Layout>
