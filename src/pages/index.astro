---
import About from '../components/home/About.astro';
import Cta from '../components/Cta.astro';
import Expertise from '../components/home/Expertise.astro';
import Testimonials from '../components/home/Testimonials.astro';
import Layout from '../layouts/Layout.astro';
const services = [
  {
    step: '01',
    name: 'Book a Call',
    description:
      "Transform Your Driveway from Stained to Stunning Professional pressure washing removes years of oil stains, dirt, and grime, restoring your driveway's original appearance and boosting your home's curb appeal across Vancouver Island.",
  },
  {
    step: '02',
    name: 'Get a Quote',
    description:
      "Expert pressure washing safely removes dirt, mildew, and weathering from siding, brick, and stucco, protecting your investment and enhancing your property's value throughout Nanaimo and beyond.",
  },
  {
    step: '03',
    name: 'Start When Free',
    description:
      'Professional moss removal protects your roof, walkways, and outdoor surfaces from costly damage while restoring safety and appearance to your Vancouver Island property.',
  },
];
---

<Layout
  description="We provide expert pressure washing for Vancouver Island homes. Serving Nanaimo, Victoria, Duncan & more. Driveways, decks, exteriors. Call today"
  title="Dr Pressure · Pressure Washing"
>
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="flex flex-col gap-16">
        <div class="flex flex-col items-start gap-8 sm:gap-10">
          <div class="flex max-w-xl flex-col items-start gap-4 sm:gap-6">
            <h1
              class="tracknig-wide text-4xl leading-[1.15] font-[600] tracking-tight text-balance capitalize sm:text-5xl lg:text-6xl"
            >
              Professional Pressure Washing Across Vancouver Island!
            </h1>
            <p
              class="text-lg leading-[2] tracking-wide text-balance text-stone-950/70 sm:text-xl dark:text-stone-200/70"
            >
              From Nanaimo to Salt Spring Island, we bring the pressure that gets results.
              Driveways, decks, patios, and home exteriors restored to perfection.
            </p>
          </div>
          <a
            href="/pricing"
            class="bg-navy-blue-700 inline-flex items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-white transition hover:bg-blue-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:bg-blue-400 dark:text-blue-950 dark:hover:bg-blue-300 dark:focus-visible:outline-blue-400"
          >
            Book a Quote
          </a>
        </div>
        <img
          class="h-auto w-full rounded-3xl"
          width="1280"
          height="640"
          src="/assets/hero.webp"
          alt="Photo by zibik on Unsplash"
        />
      </div>
    </div>
  </section>
  <!-- End of Hero Section on Homepage -->
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="flex flex-col gap-12 sm:gap-16">
        <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Services</h2>
        <div class="grid gap-8 lg:grid-cols-3">
          {
            services.map((service) => (
              <div class="bg-navy-blue-500/10 flex flex-col gap-12 rounded-3xl px-6 py-8 dark:bg-blue-400/10">
                <p class="text-sm">{service.step}</p>
                <div class="flex flex-col gap-4">
                  <h3 class="text-xl font-medium">{service.name}</h3>
                  <p class="text-base text-stone-950/70 sm:text-lg dark:text-stone-200/70">
                    {service.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
  <!-- End of Services Section on Homepage -->
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="grid gap-12 lg:grid-cols-3 lg:gap-8">
        <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">About</h2>
        <div class="flex flex-col items-start gap-8 sm:gap-10 lg:col-span-2">
          <p class="text-base text-stone-950/70 sm:text-lg dark:text-stone-200/70">
            No Nonsense. All Results pressure washing services. We're not the flashiest pressure
            washing company on Vancouver Island – we're the one that shows up on time, works hard,
            and leaves your property looking better than you thought possible. Rain or shine, from
            Courtenay to Duncan, we bring the same commitment to every job: honest work, fair
            pricing, and the kind of results that make neighbors ask questions.
          </p>
          <a
            href="/about"
            class="bg-navy-blue-700 inline-flex items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-white transition hover:bg-blue-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:bg-blue-400 dark:text-blue-950 dark:hover:bg-blue-300 dark:focus-visible:outline-blue-400"
          >
            Read about us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- End of About Section on Homepage -->
  <Testimonials />
  <Cta
    title="Get Your Free Quote Today"
    action="See the Difference Professional Pressure Washing Makes by booking your service today and discover what your property really looks like underneath."
    link={'/contact'}
    linkText={'Contact us'}
  />
</Layout>
